<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DisplaySmall" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="DisplayMedium" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="DisplayLarge" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingMultiplier">1.33</item>
    </style>

    <style name="DisplayExtraLarge" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="BodyExtraLarge" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

</resources>